@page
@model ProyectoEnvios.App.Presentacion.ListadoClientesModel
@{
}

<h2>Lista de clientes</h2><br>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col"># ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col"># de Teléfono</th>
    </tr>
  </thead>
  @foreach (var cliente in Model.Clientes)
  {
      <tbody>
          <tr scope="row">
              <td>@cliente.Id</td>
              <td>@cliente.cli_nombre</td>
              <td>@cliente.cli_apellidos</td>
              <td>@cliente.cli_telefono</td>
              <td>
                <a class="btn btn-primary" asp-page="./InformacionCliente" asp-route-clienteId="@cliente.Id">
                  <i class="far fa-eye"></i>
                </a>
              </td>
          </tr>
      </tbody>
  }